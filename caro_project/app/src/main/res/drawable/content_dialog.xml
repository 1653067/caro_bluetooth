            <stroke android:width="2dp" android:color="#a4a5a9"></stroke>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/radius_button_play"
                android:bottomRightRadius="@dimen/radius_button_play">
            </corners>
            <solid android:color="#eeeeee"></solid>
            <stroke android:color="#fff" android:width="1dp"></stroke>
        </shape>
    </item>
