<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_button_play"></corners>
            <padding android:bottom="2dp"
                android:right="2dp"
                android:left="2dp"
                android:top="2dp"></padding>
            <stroke android:width="2dp" android:color="#fff"></stroke>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fff"></solid>
            <corners android:radius="@dimen/radius_button_play"></corners>
            <stroke android:width="2dp" android:color="#bfbfbf"></stroke>
        </shape>
    </item>
</layer-list>