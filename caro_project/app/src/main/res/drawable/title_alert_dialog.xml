<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"></padding>
            <corners android:topRightRadius="@dimen/radius_button_play"
                android:topLeftRadius="@dimen/radius_button_play"></corners>
            <stroke android:width="2dp" android:color="#0981be"></stroke>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1ea7e1"></solid>
            <corners android:topRightRadius="@dimen/radius_button_play"
                android:topLeftRadius="@dimen/radius_button_play"></corners>
            <stroke android:width="1dp" android:color="#36bdf6"></stroke>
        </shape>
    </item>

</layer-list>